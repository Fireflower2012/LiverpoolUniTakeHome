@model LiverpoolUnitTakeHome.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Student Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfStudy)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.YearOfStudy)
            {
                case 1:
                <span>1st</span>
                    break;
                case 2: 
                    <span>2nd</span>
                    break;
                case 3:
                    <span>3rd</span>
                    break;
            }
            Year
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentSubject)
        </dt>
        <dd class="col-sm-10">
            @foreach (var name in Model.StudentSubject)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => name.Subject.CourseName)
                    </td>
                </tr>
            }


        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
